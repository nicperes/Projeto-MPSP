<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url(../../wwwroot/images/bg-01.jpg)">
            <div class="wrap-login100">
                <form class="login100-form validate-form" asp-action="PesquisaCPFCNPJ" asp-controller="Home" asp-route-id="" method="post">
                    <span class="login100-form-logo">
                        <img src="~/wwwroot/images/mpsp.png" />
                    </span>
                    <span class="login100-form-title p-b-34 p-t-27">
                        Portais de Consulta
                    </span>
                    <div id="teste">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" asp-for="Arpensp" id="arpensp" type="checkbox" name="Arpensp">
                            <label class="label-checkbox100" for="arpensp">
                                Arpensp
                            </label>
                        </div>
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" asp-for="Cadesp" id="cadesp" type="checkbox" name="Cadesp">
                            <label class="label-checkbox100" for="cadesp">
                                Cadesp
                            </label>
                        </div>
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" asp-for="Caged" id="caged" type="checkbox" name="Caged">
                            <label class="label-checkbox100" for="caged">
                                Caged
                            </label>
                        </div>
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" asp-for="Censec" id="censec" type="checkbox" name="Censec">
                            <label class="label-checkbox100" for="censec">
                                Censec
                            </label>
                        </div>
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" asp-for="Detran" id="detran" type="checkbox" name="Detran">
                            <label class="label-checkbox100" for="detran">
                                Detran
                            </label>
                        </div>
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" asp-for="Jucesp" id="jucesp" type="checkbox" name="Jucesp">
                            <label class="label-checkbox100" for="jucesp">
                                Jucesp
                            </label>
                        </div>
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" asp-for="Siel" id="siel" type="checkbox" name="Siel">
                            <label class="label-checkbox100" for="siel">
                                Siel
                            </label>
                        </div>
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" asp-for="Sivec" id="sivec" type="checkbox" name="Sivec">
                            <label class="label-checkbox100" for="sivec">
                                Sivec
                            </label>
                        </div>
                    </div>

                    <div id="divCPF">
                        <div class="wrap-input100 validate-input-cpf" data-validate="Informe o CPF ou CNPJ">
                            <label asp-for="CPFCNPJ"></label>
                            <input class="input100 cpf" type="number" asp-for="CPFCNPJ" id="cpf" name="CPFCNPJ" placeholder="CPF ou CNPJ">
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div>
                    </div>

                    <div id="divNome">
                        <div class="wrap-input100 validate-input-nome">
                            <label asp-for="Nome"></label>
                            <input class="input100 nome" type="text" asp-for="Nome" name="Nome" id="nome" placeholder="João da Silva">
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div>
                    </div>

                    <div id="divProcesso">
                        <div class="wrap-input100 validate-input-processo">
                            <label asp-for="Numero do Processo"></label>
                            <input class="input100 processo" type="number" asp-for="Numero do Processo" name="Processo" id="processo" placeholder="Numero do Processo">
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Pesquisar
                        </button>
                    </div>

                    <br />

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="button" onclick="location.href='@Url.Action("Menu","Home")'">
                            Voltar
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script type="text/javascript">
    
    $(document).ready(function () {

        var processo = $("#processo");
        var cpf = $("#cpf");
        var nome = $("#nome");


        //Campos ficam em hidden
        $("#divCPF").prop("hidden", "true");
        $("#divNome").prop("hidden", "true");
        $("#divProcesso").prop("hidden", "true");

        $("#arpensp").click(function () {
                if ($("#divCPF").is(":hidden")) {
                    $("#divCPF").prop("hidden", !this.checked);
                    cpf.attr('required', '');
                }else
                if (!$("#cadesp").is(":checked") && !$("#jucesp").is(":checked") && !$("#caged").is(":checked") && !$("#detran").is(":checked") && !$("#censec").is(":checked") && !$("#siel").is(":checked") && !$("#sivec").is(":checked")) {
                    $("#divCPF").prop("hidden", !this.checked);
                }
            });
            $("#cadesp").click(function () {
                if ($("#divCPF").is(":hidden")) {
                    $("#divCPF").prop("hidden", !this.checked);
                    cpf.attr('required', '');
                } else
                    if (!$("#arpensp").is(":checked") && !$("#jucesp").is(":checked") && !$("#caged").is(":checked") && !$("#detran").is(":checked") && !$("#censec").is(":checked") && !$("#siel").is(":checked") && !$("#sivec").is(":checked")) {
                        $("#divCPF").prop("hidden", !this.checked);
                    }
            });
            $("#caged").click(function () {
                if ($("#divCPF").is(":hidden")) {
                    $("#divCPF").prop("hidden", !this.checked);
                    cpf.attr('required', '');
                } else
                    if (!$("#arpensp").is(":checked") && !$("#jucesp").is(":checked") && !$("#cadesp").is(":checked") && !$("#detran").is(":checked") && !$("#censec").is(":checked") && !$("#siel").is(":checked") && !$("#sivec").is(":checked")) {
                        $("#divCPF").prop("hidden", !this.checked);
                    }
            });
            $("#censec").click(function () {
                if ($("#divCPF").is(":hidden")) {
                    $("#divCPF").prop("hidden", !this.checked);
                    cpf.attr('required', '');
                } else
                    if (!$("#arpensp").is(":checked") && !$("#jucesp").is(":checked") && !$("#cadesp").is(":checked") && !$("#detran").is(":checked") && !$("#caged").is(":checked") && !$("#siel").is(":checked") && !$("#sivec").is(":checked")) {
                        $("#divCPF").prop("hidden", !this.checked);

                    }
            });
            $("#detran").click(function () {
                if ($("#divCPF").is(":hidden")) {
                    $("#divCPF").prop("hidden", !this.checked);
                    cpf.attr('required', '');
                } else
                    if (!$("#arpensp").is(":checked") && !$("#jucesp").is(":checked") && !$("#cadesp").is(":checked") && !$("#caged").is(":checked") && !$("#censec").is(":checked") && !$("#siel").is(":checked") && !$("#sivec").is(":checked")) {
                        $("#divCPF").prop("hidden", !this.checked);
                    }
                if ($("#divNome").is(":hidden")) {
                    $("#divNome").prop("hidden", !this.checked);
                    nome.attr('required', '');
                } else if (!$("#jucesp").is(":checked") && !$("#siel").is(":checked") && !$("#detran").is(":checked")){
                    $("#divNome").prop("hidden", !this.checked);
                }
            });
            $("#jucesp").click(function () {
                if ($("#divCPF").is(":hidden")) {
                    $("#divCPF").prop("hidden", !this.checked);
                    cpf.attr('required', '');
                }
                else if (!$("#arpensp").is(":checked") && !$("#cadesp").is(":checked") && !$("#caged").is(":checked") && !$("#detran").is(":checked") && !$("#censec").is(":checked") && !$("#siel").is(":checked") && !$("#sivec").is(":checked")) {
                    $("#divCPF").prop("hidden", !this.checked);
                }

                if ($("#divNome").is(":hidden")) {
                    $("#divNome").prop("hidden", !this.checked);
                    nome.attr('required', '');
                } else if (!$("#jucesp").is(":checked") && !$("#siel").is(":checked") && !$("#detran").is(":checked")){
                    $("#divNome").prop("hidden", !this.checked);
                }
            });
            $("#siel").click(function () {
                if ($("#divCPF").is(":hidden")) {
                    $("#divCPF").prop("hidden", !this.checked);
                    cpf.attr('required', '');
                }
                else if (!$("#arpensp").is(":checked") && !$("#cadesp").is(":checked") && !$("#caged").is(":checked") && !$("#detran").is(":checked") && !$("#censec").is(":checked") && !$("#siel").is(":checked") && !$("#sivec").is(":checked")) {
                    $("#divCPF").prop("hidden", !this.checked);
                }
                
                if ($("#divProcesso").is(":hidden")) {
                    $("#divProcesso").prop("hidden", !this.checked);
                    processo.attr('required', '');
                } else if (!$("#siel").is(":checked")) {
                    $("#divProcesso").prop("hidden", !this.checked);
                }

                if ($("#divNome").is(":hidden")) {
                    $("#divNome").prop("hidden", !this.checked);
                    nome.attr('required', '');
                } else if (!$("#jucesp").is(":checked") && !$("#siel").is(":checked") && !$("#detran").is(":checked")){
                    $("#divNome").prop("hidden", !this.checked);
                }
            });
            $("#sivec").click(function () {
                if ($("#divCPF").is(":hidden")) {
                    $("#divCPF").prop("hidden", !this.checked);
                    cpf.attr('required', '');
                } else
                    if (!$("#arpensp").is(":checked") && !$("#jucesp").is(":checked") && !$("#cadesp").is(":checked") && !$("#detran").is(":checked") && !$("#censec").is(":checked") && !$("#siel").is(":checked")) {
                        $("#divCPF").prop("hidden", !this.checked);
                    }
            });
        });
    
</script>
